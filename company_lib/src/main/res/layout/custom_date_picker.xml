<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/title"
            android:layout_marginLeft="20dp"
            android:textColor="@color/font_title"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_select"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="确定"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:background="@drawable/btg_left"
                android:textColor="@color/done_text_color_normal"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/tv_cancle"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="取消"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:background="@drawable/btg_right"
                android:textColor="@color/done_text_color_normal"
                android:textSize="26sp" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/split_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:background="@color/background"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp">

            <date.bitman.company_lib.time.RobotTimePicker
                android:id="@+id/year_pv"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_weight="3" />

            <date.bitman.company_lib.time.RobotTimePicker
                android:id="@+id/month_pv"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_weight="2" />

            <date.bitman.company_lib.time.RobotTimePicker
                android:id="@+id/day_pv"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_weight="2" />

            <date.bitman.company_lib.time.RobotTimePicker
                android:id="@+id/hour_pv"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_weight="2" />

            <date.bitman.company_lib.time.RobotTimePicker
                android:id="@+id/minute_pv"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_weight="2" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>